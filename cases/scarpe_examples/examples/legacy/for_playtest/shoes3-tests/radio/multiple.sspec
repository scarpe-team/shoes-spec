    start { 
      para "checked one = #{@r1.checked?}\n" 
      para "checked far = #{@r4.checked?}\n"
    }
    button "Now check" do
      para "One: #{@r1.checked?}\n"
      para "Two: #{@r2.checked?}\n"
      para "near: #{@r3.checked?}\n"
      para "far: #{@r4.checked?}\n"
    end
  end
